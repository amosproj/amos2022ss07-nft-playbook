{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nft-playbook/backend": ["packages/backend/src/index.ts"],
      "@nft-playbook/middleware": ["packages/middleware/src/index.ts"]
    },
    "typeRoots": [
      "./solc.d.ts",
      "node_modules/@types"
    ],
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules", "tmp"]
}
